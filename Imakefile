XBLASTDIR=$(LIBDIR)/xblast

/*
 * Libraries needed for XBlast 
 * (The Solaris setting is very conservative)
 */
/*
#ifdef SOLARIS
DEPLIBS=$(DEPXTOOLLIB) $(DEPXLIB)
LOCAL_LIBRARIES=$(XTOOLLIB) $(XLIB) -lSM -lICE 
#else*/
DEPLIBS=$(DEPXLIB)
LOCAL_LIBRARIES=$(XLIB) -lm
/*
#endif
*/
